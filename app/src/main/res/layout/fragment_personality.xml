<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/img_personality_avatar"
            android:src="@drawable/ic_game"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/txt_personality_name"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Trần Văn Hiền"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_page_add_post"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_button"
                android:textAllCaps="false"
                android:text="Thêm bài viết mới"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="36dp"/>
            <ImageButton
                android:id="@+id/ibtn_setting"
                android:src="@drawable/ic_setting"
                android:background="@drawable/custom_button_grey"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="36dp"/>
        </LinearLayout>
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            style="@style/Divider.Horizontal"/>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Bạn bè"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            style="@style/Divider.Horizontal"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            style="@style/Divider.Horizontal"/>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Bài viết gần đây"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp" />
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            style="@style/Divider.Horizontal"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_my_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>