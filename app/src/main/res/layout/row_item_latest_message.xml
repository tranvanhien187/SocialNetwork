<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_friend_to_chat"
        android:layout_width="60sp"
        android:layout_height="60sp"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_avatar_friend_to_chat"
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Ngo Bao"
                android:layout_toLeftOf="@+id/txt_time_latest_message"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:id="@+id/txt_name_friend_to_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="12:22"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:id="@+id/txt_time_latest_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:id="@+id/txt_latest_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>